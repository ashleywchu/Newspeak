<div class="col-md-offset-3 col-md-6">
  <div class="well">
  <h2 class="text-center">Journalists on Newspeak</h2>
  <ul>
  <% @users.each do |user| %>
    <li>
    <h4><%= link_to user.name, "/newscolumn/#{user.name}" %></h4>
    <h5>Reporting Since: <%= user.created_at.strftime("%m/%d/%Y") %></h5>
    </li>
  <% end %>
  </ul>
  </div>
</div>