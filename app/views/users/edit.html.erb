<h2>Edit Account Settings</h2>

<div class="col-sm-10">
  <%= form_for @user, :html => {class: 'form-horizontal'} do |f| %>

  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div class="form-group">
      <%= f.label :name, "Username: ", :class => "col-sm-2 control-label"%>
      <div class="col-sm-10">
        <%= f.text_field :name, :class => "form-control", placeholder: "Username"%>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :paypal_email, "Paypal Email: (to receive tips with) ", :class => "col-sm-2 control-label"%>
      <div class="col-sm-10">
        <%= f.text_field :paypal_email, :class => "form-control", placeholder: "Enter Paypal email" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-2">
        <%= f.submit "Submit Changes", :class => "btn btn-default" %>
      </div>
    </div>
  <% end %>
</div>
