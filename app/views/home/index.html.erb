<h1> Newspeak </h1>


<h4>Real Unbiased News From Citizens Like You</h4>

<h5> Most Popular Articles: </h5>
<style>
	.box {
		border: 1px solid grey ;}
	</style>

	<% Home.most_popular.each do |article| %>
	<div class="box">
		<br>
		<br>
		<h5>
			<%= link_to "+", vote_article_path(article, {type: "up", value: article.reputation_for(:votes)}), method: "post" %>
		</h5>
		<h5>
			<%= link_to "-", vote_article_path(article, {type: "down", value: article.reputation_for(:votes)}), method: "post" %>
		</h5>
		Rep: <%= article.reputation_for(:votes).to_i ||= 0 %> &nbsp;&nbsp;&nbsp;&nbsp;
		Title: <%= article.title %> &nbsp;&nbsp;&nbsp;&nbsp;
		Abstract: <%= article.abstract %>
		<br>
		<br>
	</div>
	<% end %>
	<br>
	<hr>
	<br>

<h5>Most Recent Articles: </h5>
	<% Home.most_recent.each do |article| %>
	<div class="box">
		<br>
		<br>
		<h5>
			<%= link_to "+", vote_article_path(article, {type: "up", value: article.reputation_for(:votes)}), method: "post" %>
		</h5>
		<h5>
			<%= link_to "-", vote_article_path(article, {type: "down", value: article.reputation_for(:votes)}), method: "post" %>
		</h5>
		Date: <%= article.created_at %>
		Rep: <%= article.reputation_for(:votes).to_i ||= 0 %> &nbsp;&nbsp;&nbsp;&nbsp;
		Title: <%= article.title %> &nbsp;&nbsp;&nbsp;&nbsp;
		Abstract: <%= article.abstract %>
		<br>
		<br>
	</div>
	<% end %>