<%= form_for @article, :html => {:multipart => true} do |f| %>
<%= f.file_field :image %>

<% if @article.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@article.errors.count, "error") %> prohibited this post from being saved:</h2>

  <ul>
    <% @article.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>

<%= direct_upload_form_for @uploader do |f| %>
<p><%= f.file_field :image %></p>
<p><%= f.submit "Upload Image" %></p>
<% end %>
<%= f.hidden_field :key %>


<p><%= f.file_field :image %></p>

<p>File: <%= @article.image_name %></p>

<div class="field">
  <%= f.label :title %><br>
  <%= f.text_field :title %><br>
  <%= f.label :abstract %><br>
  <%= f.text_area :abstract %><br>
  <%= f.label :sources %><br>
  <%= f.text_area :sources %><br>
  <%= f.label :body %><br>
  <%= f.text_area :body %><br>
  <%= f.label :tag_list, "Tags (separate by commas)" %><br>
  <%= f.text_field :tag_list %><br>
</div>

<div class="actions">
  <br><%= f.submit "Report The Facts" %>
</div>
<br>
<% end %>