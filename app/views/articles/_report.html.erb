<div>
<%= form_for(@article) do |f| %>
<% if @article.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@article.errors.count, "error") %> prohibited this post from being saved:</h2>

  <ul>
    <% @article.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>`
    <% end %>
  </ul>
</div>
<% end %>
</div>
<div class="form-horizontal">
<div class="form-group">
  <%= f.label :title, "Title: ", :class => "col-sm-2 control-label"%>
  <div class="col-sm-10">
    <%= f.text_field :title, :class => "form-control" %>
  </div>
</div>
<div class="form-group">
  <%= f.label :abstract, "Abstract: ", :class => "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= f.text_area :abstract, :class => "form-control", :rows => "5" %>
  </div>
</div>
<div class="form-group">
  <%= f.label :sources, "Sources: ", :class => "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= f.text_area :sources, :class => "form-control", :rows => "3" %> 
  </div>
</div>
<div class="form-group">
  <%= f.label :body, "Body: ", :class => "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= f.text_area :body, :class => "form-control", :rows => "10" %>
  </div>
</div>
<div class="form-group">
  <%= f.label :tag_list, "Tags (separate by commas)", :class => "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= f.text_field :tag_list, :class => "form-control" %>
  </div>
</div>

<div class="actions col-sm-offset-2 inline">
  <%= f.submit "Commit Article", :class => "btn btn-default" %>
  <a href="/articles/<%= @article.id %>" class="btn btn-default">Back</a>
</div>
<% end %>
</div>